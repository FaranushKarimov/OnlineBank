@model IEnumerable<AccountViewModel>
@using OnlineBank.Models
@using OnlineBank.Code

<div class="top-buffer"></div>
<div class="panel panel-primary">
    <div class="panel-heading panel-head">Accounts</div>
    <div class="panel-body">
        <div class="btn-group">
            <a id="createEditAccountModal" data-toggle="modal" asp-action="AddEditAccount" data-target="#modal-action-account" class="btn btn-primary">
                <i class="glyphicon glyphicon-plus"></i>  Add Account
            </a>
        </div>
        <div class="top-buffer"></div>
        <table class="table table-bordered table-striped table-condensed">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@Html.DisplayFor(modelItem => item.name)</td>
                        <td>@Html.DisplayFor(modelItem => item.email)</td>
                        <td>
                            <a id="editAccountModal" data-toggle="modal" asp-action="AddEditAccount" asp-route-id="@item.accountId" data-target="#modal-action-account"
                               class="btn btn-info">
                                <i class="glyphicon glyphicon-pencil"></i>  Edit
                            </a>
                            <a id="deleteAccountModal" data-toggle="modal" asp-action="DeleteAccount" asp-route-id="@item.accountId" data-target="#modal-action-account" class="btn btn-danger">
                                <i class="glyphicon glyphicon-trash"></i>  Delete
                            </a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>

@Html.Partial("_Modal", new BootstrapModel { ID = "modal-action-account", AreaLabeledId = "modal-action-account-label", Size = ModalSize.Medium })

@section scripts
    {
    <script src="~/js/account-index.js" asp-append-version="true"></script>
}